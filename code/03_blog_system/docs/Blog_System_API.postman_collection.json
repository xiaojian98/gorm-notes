						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"更新后的文章标题\",\n  \"content\": \"更新后的文章内容...\",\n  \"excerpt\": \"更新后的摘要\",\n  \"category_id\": 2,\n  \"tags\": [2, 3, 4],\n  \"status\": \"published\"\n}"
