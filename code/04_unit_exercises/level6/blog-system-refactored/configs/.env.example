# 应用配置
APP_ENV=development
APP_PORT=8080
APP_NAME=博客系统
APP_DEBUG=true

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=blog_system
DB_USER=root
DB_PASSWORD=password
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local

# PostgreSQL 配置示例（可选）
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=blog_system
# DB_USER=postgres
# DB_PASSWORD=password
# DB_SSLMODE=disable
# DB_TIMEZONE=Asia/Shanghai

# SQLite 配置示例（开发环境）
# DB_TYPE=sqlite
# DB_NAME=blog_system.db

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# 服务器配置
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=60

# CORS配置
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# 文件上传配置
UPLOAD_PATH=./uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=./logs/app.log

# 缓存配置（Redis）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com
SMTP_FROM_NAME=博客系统

# 安全配置
BCRYPT_COST=12
SESSION_SECRET=your-session-secret-key
CSRF_SECRET=your-csrf-secret-key

# 第三方服务配置
# 阿里云OSS
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET=
ALIYUN_OSS_ENDPOINT=

# 腾讯云COS
TENCENT_SECRET_ID=
TENCENT_SECRET_KEY=
TENCENT_COS_BUCKET=
TENCENT_COS_REGION=

# 监控配置
MONITOR_ENABLE=true
MONITOR_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# 开发环境配置
DEV_AUTO_MIGRATE=true
DEV_SEED_DATA=true
DEV_ENABLE_PPROF=true
DEV_ENABLE_SWAGGER=true